<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_s_header">
        <!-- Header -->
        <div class="header">
            <div style="border-bottom: 1px solid #000;">
                <table style="width:100%;">
                    <tr>
                        <td style="vertical-align:top; text-align:left;">
                            <br/>
                            <h1>Invoice # 243817</h1>
                            <p>07/16/17</p>
                        </td>
                        <td style="width:100px;">
                            <img t-att-src="'/wcustom_header_footer_pdf/static/image.png'"
                                style="width: 200px; height: 200px; border-radius: 20pt;"
                                alt="Header Image"/>    
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    
        <!-- Body -->
        <div class="article o_report_layout_standard">
            <div class="col-12">
                <h2>Content Title</h2>
                <p>This is the content of the dummy PDF report.</p>
                <table style="width:100%; border-collapse: collapse; background-color: #f7f9fa; margin-bottom: 16px;">
                    <tr>
                        <td style="padding: 12px 18px; vertical-align: top;">
                            <p style="color: #888; font-size: 13px; margin-bottom: 4px;"><strong>Billing Address</strong></p>
                            <p style="font-weight: bold; margin: 0 0 2px 0;">Premier Buy</p>
                            <p style="margin: 0 0 2px 0;">Home Office</p>
                            <p style="margin: 0 0 2px 0;">7601 Penn Avenue South</p>
                            <p style="margin: 0;">Richfield, MN 55423</p>
                        </td>
                        <td style="padding: 12px 18px; vertical-align: top;">
                            <p style="color: #888; font-size: 13px; margin-bottom: 4px;"><strong>Shipping Address</strong></p>
                            <p style="font-weight: bold; margin: 0 0 2px 0;">Premier Buy</p>
                            <p style="margin: 0 0 2px 0;">Salt Lake City Store</p>
                            <p style="margin: 0 0 2px 0;">261 W 2100</p>
                            <p style="margin: 0;">Salt Lake City, UT 84115</p>
                        </td>
                    </tr>
                </table>
                <table style="width:100%; border-collapse: collapse; margin-bottom: 16px;">
                    <tr>
                        <td style="padding: 4pt; border-top: 1px solid #888; border-bottom: 1px solid #888;">
                            <p><strong>Sales Rep.</strong></p>
                        </td>
                        <td style="padding: 4pt; border-top: 1px solid #888; border-bottom: 1px solid #888;">
                            <p><strong>PO #</strong></p>
                        </td>
                        <td style="padding: 4pt; border-top: 1px solid #888;">
                            <p><strong>Ship Date</strong></p>
                        </td>
                        <td style="padding: 4pt; border-top: 1px solid #888; border-bottom: 1px solid #888;">
                            <p><strong>Ship Via</strong></p>
                        </td>
                        <td style="padding: 4pt; border-top: 1px solid #888; border-bottom: 1px solid #888;">
                            <p><strong>FOB</strong></p>
                        </td>
                        <td style="padding: 4pt; border-top: 1px solid #888;">
                            <p><strong>Terms</strong></p>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 4pt; border-top: 1px solid #888;">
                            <p>Harve Mudd</p>
                        </td>
                        <td style="padding: 4pt; border-top: 1px solid #888;">
                            <p>1208</p>
                        </td>
                        <td style="padding: 4pt; border-top: 1px solid #888;">
                            <p> </p>
                        </td>
                        <td style="padding: 4pt; border-top: 1px solid #888;">
                            <p>Ground</p>
                        </td>
                        <td style="padding: 4pt; border-top: 1px solid #888;">
                            <p>-</p>
                        </td>
                        <td style="padding: 4pt; border-top: 1px solid #888;">
                            <p>15 Days</p>
                        </td>
                    </tr>
                </table>
                <table style="width:100%; border-collapse: collapse; background-color: #f7f9fa; margin-bottom: 16px;">
                    <tr style="background-color: #5a5a5a; color: #fff;">
                        <th style="padding: 8px; text-align: left; font-weight: bold;">Description</th>
                        <th style="padding: 8px; text-align: right; font-weight: bold;">Unit Price</th>
                        <th style="padding: 8px; text-align: right; font-weight: bold;">Quantity</th>
                        <th style="padding: 8px; text-align: right; font-weight: bold;">Discount</th>
                        <th style="padding: 8px; text-align: right; font-weight: bold;">Total</th>
                    </tr>
                    <tr style="background-color: #fff;">
                        <td style="padding: 8px;">SuperLED 42</td>
                        <td style="padding: 8px; text-align: right;">$1,050</td>
                        <td style="padding: 8px; text-align: right;">2</td>
                        <td style="padding: 8px; text-align: right;">$50</td>
                        <td style="padding: 8px; text-align: right;">$2,050</td>
                    </tr>
                    <tr style="background-color: #f7f9fa;">
                        <td style="padding: 8px;">SuperLED 50</td>
                        <td style="padding: 8px; text-align: right;">$1,100</td>
                        <td style="padding: 8px; text-align: right;">5</td>
                        <td style="padding: 8px; text-align: right;">$500</td>
                        <td style="padding: 8px; text-align: right;">$5,000</td>
                    </tr>
                    <tr style="background-color: #fff;">
                        <td style="padding: 8px;">Projector PlusHD</td>
                        <td style="padding: 8px; text-align: right;">$600</td>
                        <td style="padding: 8px; text-align: right;">5</td>
                        <td style="padding: 8px; text-align: right;">$250</td>
                        <td style="padding: 8px; text-align: right;">$2,750</td>
                    </tr>
                    <tr style="background-color: #f7f9fa;">
                        <td style="padding: 8px;">HD Video Player</td>
                        <td style="padding: 8px; text-align: right;">$220</td>
                        <td style="padding: 8px; text-align: right;">10</td>
                        <td style="padding: 8px; text-align: right;">$200</td>
                        <td style="padding: 8px; text-align: right;">$2,000</td>
                    </tr>
                </table>
                <table style="width:100%; margin-top: 24px;">
                    <tr>
                        <!-- Comments Section -->
                        <td style="width:65%; vertical-align:top;">
                            <p style="color:#888; margin-bottom: 4px;">Comments</p>
                            <div style="border:1.5px solid #e0e3e6; border-radius:3px; height:60px; background:#fff; padding:8px;"></div>
                        </td>
                        <!-- Totals Section -->
                        <td style="width:35%; vertical-align:top;">
                            <table style="width:100%; background:#f7f9fa; border-collapse:collapse;">
                                <tr>
                                    <td style="padding:6px 8px; color:#888;">Sub Total</td>
                                    <td style="padding:6px 8px; text-align:right; font-weight:bold;">$11,800</td>
                                </tr>
                                <tr>
                                    <td style="padding:6px 8px; color:#888;">Shipping</td>
                                    <td style="padding:6px 8px; text-align:right; font-weight:bold;">$375</td>
                                </tr>
                                <tr>
                                    <td colspan="2"><hr style="border:1px solid #888; margin:4px 0;"/></td>
                                </tr>
                                <tr>
                                    <td style="padding:6px 8px; color:#888; font-weight:bold;">Total Due</td>
                                    <td style="padding:6px 8px; text-align:right; font-weight:bold;">$12,175</td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    
        <!-- Footer -->
        <div class="footer o_standard_footer">
            <div class="text-center" style="border-top: 1px solid #000; padding-top: 10px;">
                <h2>Footer Content</h2>
            </div>
        </div>
    </template>

    <template id="dummy_pdf_report_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="wcustom_header_footer_pdf.custom_s_header"/>
            </t>
        </t>
    </template>


    <record id="patient_report_pdf_temp" model="ir.actions.report">
        <field name="name">Dummy Report</field>
        <field name="model">hospital.management.patient</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">wcustom_header_footer_pdf.dummy_pdf_report_template</field>
        <field name="report_file">wcustom_header_footer_pdf.dummy_pdf_report_template</field>
        <field name="binding_model_id" ref="hospital_management.model_hospital_management_patient"/>
        <field name="binding_type">report</field>
    </record>

</odoo>
